FROM postgis/postgis:16-3.4

# Instalar GDAL como root antes de que se ejecuten los scripts de inicialización
USER root

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gdal-bin \
        python3-gdal && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Volver al usuario postgres para la inicialización normal
USER postgres
